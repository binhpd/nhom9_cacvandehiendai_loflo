    .box
      .display
        input#textbox(type='text', readonly='readonly', size='18', name='resulttext', value='#{resulttext}')
      .keys
        p
          input.button.gray(type='button', value='^', onclick='v("^")')
          input.button.gray(type='button', value='(', onclick='v("(")')
          input.button.gray(type='button', value=')', onclick='v(")")')
          input.button.pink(type='button', value='/', onclick='v("/")')
        p
          input.button.black(type='button', value='7', onclick='v("7")')
          input.button.black(type='button', value='8', onclick='v("8")')
          input.button.black(type='button', value='9', onclick='v("9")')
          input.button.pink(type='button', value='*', onclick='v("*")')
        p
          input.button.black(type='button', value='4', onclick='v("4")')
          input.button.black(type='button', value='5', onclick='v("5")')
          input.button.black(type='button', value='6', onclick='v("6")')
          input.button.pink(type='button', value='-', onclick='v("-")')
        p
          input.button.black(type='button', value='1', onclick='v("1")')
          input.button.black(type='button', value='2', onclick='v("2")')
          input.button.black(type='button', value='3', onclick='v("3")')
          input.button.pink(type='button', value='+', onclick='v("+")')
        p
          input.button.black(type='button', value='0', onclick='v("0")')
          input.button.black(type='button', value='.', onclick='v(".")')
          input.button.black(type='button', value='C', onclick='ce()')
          input.button.orange(type='button', value='=', onclick='post("/", document.getElementById("textbox").value, "post")')
